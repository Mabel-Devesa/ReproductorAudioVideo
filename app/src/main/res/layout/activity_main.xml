<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/audioButton"
        android:layout_width="145dp"
        android:layout_height="122dp"
        android:layout_marginEnd="240dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="208dp"
        android:adjustViewBounds="false"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/audio" />

    <ImageButton
        android:id="@+id/videoButton"
        android:layout_width="145dp"
        android:layout_height="122dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="210dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/video" />

    <TextView
        android:id="@+id/lblAudio"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="94dp"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/bangers"
        android:text="@string/lblAudio"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/audioButton"
        app:layout_constraintEnd_toStartOf="@+id/lblVideo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblVideo"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/bangers"
        android:text="@string/lblVideo"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/videoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblAudio" />
</android.support.constraint.ConstraintLayout>